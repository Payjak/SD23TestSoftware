@model IEnumerable<SDQuizMaker.Models.tbtanswer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .Answers{
        text-align:center;
        font-size:xx-large;
        font-weight:bolder;
        margin-top: 50px;
        color:firebrick;
    }
    .Button{
        margin-left: 390px;
        margin-top: 15px;
        margin-bottom: 25px;
    }
    .Button2{
        margin-left: 600px;
        margin-top: -59px;
        margin-bottom: 25px;
    }
</style>

<h2 class="Answers">Answers</h2>

<p class="Button">
    @Html.ActionLink("Create New Answer", "Create", null,
    new { @style = "color:white;background-color:red;font-weight:bolder;", @class = "btn btn-default btn-sml" })
</p>

<p class="Button2">
    @Html.ActionLink("Back to Questions", "BackToIndex", "Tquestion", null,
    new { @style = "color:white;background-color:red;font-weight:bolder;", @class = "btn btn-default btn-sml" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tbtquestion.Question)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Correct)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tbtquestion.Question)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Correct)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TAnswerID }) |
            @Html.ActionLink("Details", "Details", new { id=item.TAnswerID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TAnswerID })
        </td>
    </tr>
}

</table>
