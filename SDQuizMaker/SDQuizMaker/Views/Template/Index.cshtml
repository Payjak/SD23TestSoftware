@model IEnumerable<SDQuizMaker.Models.tbtemplate>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .Create{
        text-align:center;
        font-size:xx-large;
        font-weight:bolder;
        margin-top: 60px;
        color:firebrick;
    }

    .Button{
        margin-left: 490px;
        margin-top: 15px;
        margin-bottom: 25px;
    }
</style>

<h2 class="Create">Create Your Template</h2>

<p class="Button">
    @Html.ActionLink("Create New Template", "Create", null,
    new { @style = "color:white;background-color:red;font-weight:bolder;", @class = "btn btn-default btn-sml" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Rename", "Edit", new { id=item.TemplateID }) |
            @Html.ActionLink("Details", "Details", new { id=item.TemplateID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TemplateID }) |
            @Html.ActionLink("Questions", "Index", "TQuestion", new { id=item.TemplateID },null) 
        </td>
    </tr>
}

</table>
