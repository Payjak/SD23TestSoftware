@model IEnumerable<SDQuizMaker.Models.tbtemplate>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Template", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TemplateID }) |
            @Html.ActionLink("Details", "Details", new { id=item.TemplateID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TemplateID }) |
            @Html.ActionLink("Use Template", "Index", "TQuestion", new { id=item.TemplateID },null) 
        </td>
    </tr>
}

</table>
