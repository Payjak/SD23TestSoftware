@model IEnumerable<SDQuizMaker.Models.tbuser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .User{
        text-align:center;
        font-size:xx-large;
        font-weight:bolder;
        margin-top: 60px;
        color:firebrick;
    }
    .Button{
        margin-left: 500px;
        margin-top: 15px;
        margin-bottom: 25px;
    }
</style>

<h2 class="User">Users</h2>

<p class="Button">
    @Html.ActionLink("Create New User", "Create", null,
    new { @style = "color:white;background-color:red;font-weight:bolder;", @class = "btn btn-default btn-sml" })
</p>
<table class="table">
    <tr>
        <th>
            UserID
        </th>
        <th>
            ClassID
        </th>
        <th>
            ProfilePic
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccessLevel)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClassID)
        </td>
        @if ((string)Session["ProfilePic"] != null)
        {
            <td>
                <img src="@Url.Content(item.ProfilePic)" class="img-thumbnail" height="100" width="100" />
            </td>
        }
        else
        {
            <td>
                <img class="img-thumbnail" src="http://53percent.com/images/noimg.gif" height="300" width="150" />
            </td>


        }
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessLevel)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.UserID }) |
            @Html.ActionLink("Details", "Details", new { id=item.UserID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.UserID })
        </td>
    </tr>
}

</table>
