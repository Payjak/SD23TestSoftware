@model IEnumerable<SDQuizMaker.Models.tbiquestion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null,
    new { @style = "color:black;", @class = "btn btn-default btn-sml" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Explanation)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Question)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Explanation)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IQuestionID }) |
            @Html.ActionLink("Details", "Details", new { id=item.IQuestionID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IQuestionID })
        </td>
    </tr>
}

</table>
