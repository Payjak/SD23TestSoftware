@model IEnumerable<SDQuizMaker.Models.tbintake>

    @{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

<style>
    .Title{
        text-align:center;
        font-size:xx-large;
        font-weight:bolder;
        margin-top: 50px;
        color:firebrick;
    }
    .Button{
        margin-left: 492px;
        margin-top: 15px;
        margin-bottom: 25px;
    }
</style>

    <h2 class="Title">List of Intakes</h2>

    <p class="Button">
        @Html.ActionLink("Create New Intake", "Create", null,
    new { @style = "color:white;background-color:red;font-weight:bolder;", @class = "btn btn-default btn-sml" })
    </p>
    <table class="table">
        <tr>
            <th>
                Intake
            </th>
            <th>
                Program
            </th>
        </tr>

        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClassID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbprogram.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ClassID }) |
                @Html.ActionLink("Details", "Details", new { id=item.ClassID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ClassID })
            </td>
        </tr>
        }

    </table>
