@model IEnumerable<SDQuizMaker.Models.tbresponsedetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .Title{
        text-align:center;
        font-size:xx-large;
        font-weight:bolder;
        margin-top: 50px;
        color:firebrick;
    }
    .Button{
        margin-left: 515px;
        margin-top: 15px;
        margin-bottom: 25px;
    }
</style>

<h2 class="Title">Responses</h2>

<p class="Button">
    @Html.ActionLink("Create New", "Create", null,
    new { @style = "color:white;background-color:red;font-weight:bolder;", @class = "btn btn-default btn-sml" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tbianswer.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbresponse.UserID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tbianswer.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbresponse.UserID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DetailID }) |
            @Html.ActionLink("Details", "Details", new { id=item.DetailID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DetailID })
        </td>
    </tr>
}

</table>
